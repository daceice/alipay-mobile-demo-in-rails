<h1>Listing admins</h1>

<table>
  <tr>
    <th>Login name</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admins.each do |admin| %>
  <tr>
    <td><%= admin.login_name %></td>
    <td><%= link_to 'Show', admin %></td>
    <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
    <td><%= link_to (admin.available ? 'Stop' : 'Start' ), admin, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

