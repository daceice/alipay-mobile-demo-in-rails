<h1>Listing products</h1>

<table>
  <tr>
    <th>商品名称</th>
    <th>描述</th>
	  <th>图片</th>
    <th>单价</th>
    <th>库存数量</th>
    <th>订单数量</th>
    <th>可用数量</th>
    <th>状态</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name_info %></td>
    <td><%= product.description_info%></td>
	  <td><%= product_icon_image(product) %></td>
    <td><%= product.unitprice_info %></td>
    <td><%= product.amount.to_i %></td>
    <td><%= product.order_amount.to_i %></td>
    <td><%= product.amount.to_i - product.order_amount.to_i %></td>
    <td><%= product.available %></td>
    <td><%= link_to '查看', product %></td>
    <td><%= link_to '编辑', edit_product_path(product) %></td>
    <td>
			<% if product.available%>
			   <%= link_to( '停用', unuse_product_path(product.id), :confirm => '确定要停用？', :method => :post) %>
			<% else %>
			   <%= link_to( '启用', reuse_product_path(product.id), :confirm => '确定要启用？', :method => :post) %>
			<% end %></td>
  </tr>
<% end %>
</table>

